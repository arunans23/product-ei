<proxy xmlns="http://ws.apache.org/ns/synapse" name="transformMediatorAutoPrimitiveCustomRegex"
       startOnLoad="true" transports="https http">
    <description/>
    <target>
        <inSequence>
            <property name="messageType" scope="axis2" value="application/json"/>
            <jsontransform>
                <property name="synapse.commons.json.output.disableAutoPrimitive.regex"
                          value = "^-?(0|[1-9][0-9]*)(\.[0-9]+)?([eE][+-]?[0-9]+)?$"/>
            </jsontransform>
            <respond/>
        </inSequence>
    </target>
</proxy>
